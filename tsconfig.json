{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2017", "dom", "esnext"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
