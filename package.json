{
  "name": "online-ordering-chain",
  "version": "1.0.0",
  "description": "Online Ordering CHAIN Service",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=local && npm run dev || npm run prod",
    "prod": "node ./dist/index.js",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/index.js\" ",
    "build": "rm -rf dist && ./node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "npx eslint src --ext .ts --fix",
    "test": "MONGODB_DATABASE_URI=mongodb://127.0.0.1/test-online-ordering jest --forceExit --detectOpenHandles  --watchAll --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run build"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "http-status-codes": "^2.1.4",
    "if-env": "^1.0.4",
    "js-sha256": "^0.9.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "swagger-jsdoc": "6.0.0",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^4.4.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.3",
    "@types/jsonfile": "^6.0.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^2.7.10",
    "@types/node": "^14.14.31",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@types/randomstring": "^1.1.7",
    "@types/sinon": "^7.5.2",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "inquirer": "^8.0.0",
    "mocha": "^8.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "test-console": "^1.1.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.0.0",
    "tsc-watch": "^1.1.39"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/index.ts",
      "src/contracts/*.ts",
      "src/routes/*.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "text-summary"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 10,
    "statements": 10,
    "functions": 10,
    "branches": 10
  }
}
